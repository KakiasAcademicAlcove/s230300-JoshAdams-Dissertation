KIBANA_SUPERUSER=super_kibana

# Metricbeat
METRICBEAT_DIR=./services/metricbeat
METRICBEAT_CONFIG_DIR=./services/metricbeat/config

# Filebeat
FILEBEAT_DIR=./services/filebeat
FILEBEAT_CONFIG_DIR=/usr/share/filebeat
FILEBEAT_CERTS_DIR=/usr/share/filebeat/certs
FILEBEAT_DATA_DIR=/usr/share/filebeat/data
FILEBEAT_INGEST_DATA_DIR=./services/filebeat/ingest_data

# Kafka
KAFKA_VERSION=4.0.0
KAFKA_MEMORY_LIMIT=1073741824

KAFKA_SSL_KEY_CREDENTIALS=key_credentials.txt
KAFKA_SSL_KEYSTORE_CREDENTIALS=keystore_credentials.txt
KAFKA_SSL_TRUSTSTORE_CREDENTIALS=truststore_credentials.txt

# Kafka 1
KAFKA_NODE_1_PORT=19092
KAFKA_NODE_1_CONFIG_DIR=./services/kafka/node-1-config

KAFKA_NODE_1_NODE_ID=1
KAFKA_NODE_1_PROCESS_ROLES=controller,broker
KAFKA_NODE_1_LISTENERS=CONTROLLER://:9093,BROKER://:9092
KAFKA_NODE_1_ADVERTISED_LISTENERS=BROKER://kafka-1:9092
KAFKA_NODE_1_LISTENER_SECURITY_PROTOCOL_MAP=CONTROLLER:SSL,BROKER:SSL
KAFKA_NODE_1_INTER_BROKER_LISTENER_NAME=BROKER
KAFKA_NODE_1_CONTROLLER_LISTENER_NAMES=CONTROLLER
KAFKA_NODE_1_CONTROLLER_QUORUM_VOTERS=1@kafka-1:9093,2@kafka-2:9093,3@kafka-3:9093
KAFKA_NODE_1_GROUP_INITIAL_REBALANCE_DELAY_MS=0
KAFKA_NODE_1_AUTO_CREATE_TOPICS_ENABLE=true
KAFKA_NODE_1_NUM_PARTITIONS=3
KAFKA_NODE_1_MIN_INSYNC_REPLICAS=2
KAFKA_NODE_1_DEFAULT_REPLICATION_FACTOR=3
KAFKA_NODE_1_LOG_RETENTION_HOURS=72
KAFKA_NODE_1_MESSAGE_MAX_BYTES=1000012
KAFKA_NODE_1_SSL_KEYSTORE_LOCATION=/etc/kafka/secrets/kafka-1.keystore.jks
KAFKA_NODE_1_SSL_TRUSTSTORE_LOCATION=/etc/kafka/secrets/kafka-1.truststore.jks
KAFKA_NODE_1_SSL_CLIENT_AUTH=requested
KAFKA_NODE_1_SSL_KEYSTORE_FILENAME=kafka-1.keystore.jks
KAFKA_NODE_1_SSL_TRUSTSTORE_FILENAME=kafka-1.truststore.jks

