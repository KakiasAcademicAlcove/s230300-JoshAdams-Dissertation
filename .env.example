# Elasticsearch
ELASTIC_VERSION=8.17.4
ELASTICSEARCH_MEMORY_LIMIT=2147483648
ELASTICSEARCH_HOSTS=https://elasticsearch:9200
ELASTICSEARCH_NODE_NAME=elasticsearch
ELASTICSEARCH_CLUSTER_NAME=elasticsearch-cluster
